              "host": ["{{baseUrl}}"],
              "path": ["api", "llms", "decisions"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            },
            "description": "Get historical AI decisions with pagination"
          }
        },
