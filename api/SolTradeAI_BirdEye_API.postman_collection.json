{
  "info": {
    "name": "SolTradeAI - Complete API",
    "description": "Complete API collection for SolTradeAI backend with MongoDB, Solana trading, and Kamino lending support. Includes AI-powered trading decisions, lending opportunities analysis, token balances, and manual operations.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "apiPrefix",
      "value": "/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "your_jwt_token_here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}{{apiPrefix}}/",
          "host": ["{{baseUrl}}"],
          "path": ["api", ""]
        },
        "description": "Check if the API is running"
      }
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Get Auth Message",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}{{apiPrefix}}/auth/message",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "message"]
            },
            "description": "Get message to sign with wallet"
          }
        },
        {
          "name": "Verify Signature",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"walletAddress\": \"your_wallet_address\",\n  \"signature\": \"your_signature\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}{{apiPrefix}}/auth/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "verify"]
            },
            "description": "Verify wallet signature and get JWT token"
          }
        }
      ]
    },
